global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

frontend www.davyngamije.tech
        mode http
        bind :80
        bind :443 ssl crt /etc/letsencrypt/live/www.davyngamije.tech/combine.pem
http-request redirect code 301 scheme https unless { ssl_fc }
        default_backend davyngamije

backend davyngamije
        mode http
        balance roundrobin
        server 6144-web-01 34.228.196.248:80 check
        server 6144-web-02 54.90.229.217:80 check
